<% unless upcoming.empty? %>
  <hr>

  <button class="btn btn-primary" id="show-hide-upcoming">
    Show Future Late Plates
  </button>
  <div class="row" id="upcoming">
    <h3>Future Late Plates (not for today)</h3>
    <div class="col-md-8">
      <table class="table table-striped table-hover">
        <thead>
          <th>Name</th>
          <th>For dinner on</th>
          <th>Added at</th>
          <th>House</th>
          <th></th>
        </thead>
        <tbody>
          <% upcoming.each do |p| %>
            <tr>
              <td><%= p.cooper.initialized_name %></td>
              <td><%= p.simple_time_for_day %></td>
              <td><%= p.simple_time_with_date %></td>
              <td><%= p.cooper.house %></td>
              <% if current_user && p.cooper.id == current_user.id %>
                <td>
                  <%= link_to "Remove", late_plate_path(p.id), method: :delete %>
                </td>
              <% else %>
                <td></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
