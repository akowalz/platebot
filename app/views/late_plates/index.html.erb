<div class="row">
  <div class="<%= current_user ? 'col-md-10' : 'col-md-12'%>">
    <div class="row">
      <div class="col-md-10">
        <h1> <%= @today %> </h1>
      </div>
    </div>

    <hr>

    <div class="row">
      <% if !current_user || current_user.lives_in_foster? %>
        <div class="col-md-6">
          <h2>Foster (the Zooo)</h2>
          <%= render "plate_table", { plates: @foster_plates } %>
        </div>
      <% end %>

      <% if !current_user || current_user.lives_in_elmwood? %>
        <div class="col-md-6">
          <h2>Elmwood</h2>
          <%= render "plate_table", { plates: @elmwood_plates } %>
        </div>
      <% end %>
    </div>

    <%= render "upcoming_plates", { upcoming: @upcoming } if current_user %>

    <hr>

    <div class="row">
      <div class="col-md-6">
        <%= render("quick_reference") %>

        <div class="row">
          <% if current_user %>
            <p>
              Have an idea to make PlateBot better? Found a bug? Just want to say hey?
              <%= link_to("Submit feedback here!", feedback_path) %>
            </p>
          <% end %>
        </div>
      </div>

    </div>
  </div>

    <%= render("shared/user_panel", { cooper: current_user }) if current_user %>
</div>
