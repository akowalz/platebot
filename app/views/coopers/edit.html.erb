<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Update your info</h1>
    <%= form_for @cooper do |f| %>
      <div class="form-group">
        <%= f.label :fname, "First name" %>
        <%= f.text_field :fname, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :lname, "Last name" %>
        <%= f.text_field :lname, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :number, "Phone number" %>
        <%= f.telephone_field :number, placehold: "333-444-5555", class: "form-control" %>
      </div>

      <%= f.label :house, "Your house" %>
      <%= collection_select(:cooper, :house_id, House.all, :id, :name ) %>

      <%= f.submit "Update!", class: "btn btn-block btn-success" %>
    <% end %>
  </div>
</div>
